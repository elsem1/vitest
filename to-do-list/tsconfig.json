{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "types": ["vitest/globals"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "to-do-list/tests/**/*", "to-do-list/src/components/TodoList.vue", "to-do-list/src/components/TodoItem.vue", "to-do-list/src/components/TodoInput.vue"],
  "exclude": ["node_modules"]
}
